<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#fdfdfd">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fdfdfd">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal">
            <TextView
                android:id="@+id/nombreDesarrollador"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="Daniel Lechuga Ochoa"
                android:layout_gravity="center_horizontal"
                android:textSize="30dp"
                android:layout_margin="20dp"/>
            <ImageView
                android:id="@+id/imagenDesarrollador"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/omega_actuaria"/>
            <TextView
                android:id="@+id/descripcionDesarrollador"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="Descripcion"
                android:textSize="20dp"/>
        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true">
        <TextView
            android:id="@+id/daliaButton"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:paddingTop="10dp"
            android:layout_weight="1"
            android:text="Dalia"
            android:textSize="25dp"
            android:textColor="#ffffff"
            android:background="@color/colorAccent"/>
        <TextView
            android:id="@+id/nallelyButton"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:paddingTop="10dp"
            android:layout_weight="1"
            android:text="Nallely"
            android:textSize="25dp"
            android:textColor="#ffffff"
            android:background="@color/colorPrimary"/>
        <TextView
            android:id="@+id/lechugaButton"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="10dp"
            android:gravity="center_horizontal"
            android:layout_weight="1"
            android:text="Daniel"
            android:textSize="25dp"
            android:textColor="#ffffff"
            android:background="@color/colorAccent"/>
    </LinearLayout>
</RelativeLayout>